<%- include("partials/header.ejs") %>


  <div class="container-md">
    <div class="row titleRow">
      <h1>Welcome to KvK blogspot!</h1></div>
      <div class="row">
      <div class="col front-page-col">
        <div class="row">
        <img src="https://t3.ftcdn.net/jpg/02/48/42/64/360_F_248426448_NVKLywWqArG2ADUxDq6QprtIzsF82dMF.jpg" alt="" style="width: 50%;">
      </div>
        <div class="row">
        <form action="/newPost" method="GET" id="newPostBtn">
          <input type="submit" value="New Post">
        </form>
      </div>
      </div>
      <div class="col"> 
        <h2>Latest Posts</h2><% if (posts.length>0) { %>
          <div class="accordion accordion-flush" id="accordionFlushExample">    
          <% posts.forEach((post) => { %>
              
                <div class="accordion-item">
                  <h2 class="accordion-header" id="flush-heading-<%= post.postId %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-<%= post.postId %>" aria-expanded="false" aria-controls="flush-collapse-<%= post.postId %>">
                        <%= post.postId %> <%= post.postTitle %>
                    </button>
                  </h2>
                  <div id="flush-collapse-<%= post.postId %>" class="accordion-collapse collapse" aria-labelledby="flush-heading-<%= post.postId %>" data-bs-parent="#accordionFlushExample">
                    <div class="accordion-body"><div class="row"><%= post.postBody%></div>
                    <div class="row">
                        <div class="col-md-4">            
                        <form action="/updatePost/<%= post.postId %>">
                          <button class="btn btn-secondary" type="submit">Update</button>
                      </form></div>
                      <div class="col-md-4">
                        <form action="/delete/<%= post.postId %> " method="DELETE">
                          <button class="btn btn-danger" type="submit">Delete</button>
                        </form>
                    </div>
                    <div class="col-md-4">            
                      <form action="/readPost/<%= post.postId %>">
                        <button class="btn btn-primary" type="submit">Read</button>
                    </form></div></div>
                  </div>
                </div>
            
              </div>

              <%}) %>
            </div>
          </div> 
        </div>
          <% } else { %>
            <p>No posts yet!</p>
            <% } %>
       %>
    </div>
    </div>
  </div>


<%- include("partials/footer.ejs") %>